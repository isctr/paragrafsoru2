<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.aocetinns.paragrafsoru"
    versionCode="2"
    version   = "1.0.2">
  <name>Paragraf Soruları</name>
  <description>Paragraf Soruları</description>
  <preference name="permissions" value="none"/>

  <author href="http://www.sorucenneti.net" email="genckafem@gmail.com">genckafem</author>

  <icon src="icon.png" />
  <gap:splash src="splash.png" />
  <preference name="android-targetSdkVersion" value="28" />
  
  <!-- iOS specific -->
  <preference name="orientation" value="landscape" />
  <preference name="target-device" value="tablet" />
  <preference name="fullscreen" value="true" />
  <preference name="webviewbounce" value="true" />
  <preference name="prerendered-icon" value="false" />
  <preference name="stay-in-webview" value="false" />
  <preference name="ios-statusbarstyle" value="black-translucent" />


  <!-- Android specific -->
  <preference name="android-installLocation" value="preferExternal" />
  <preference name="deployment-target" value="10.0" />
	<preference name="android-minSdkVersion" value="21" />
	<access origin="*" />


  <!-- Windows phone specific -->


  <!-- Blackberry specific -->
  <preference name="disable-cursor" value="true" />


  <!-- WebOS specific -->



